#include <stdio.h>
#include "main.h"
/**
 *print_string - function prints a string
 *@str: the string to print
 *Return: void
 */
void print_string(const char *str)
{
while (*str)
{
if (*str > 31 && *str < 127)
{
putchar(*str);
}
else
{
putchar('\\');
putchar('x');
putchar((*str / 16) % 16 >= 10 ? 'A' + ((*str / 16) % 16 - 10) : '0' + (*str / 16) % 16);
putchar((*str % 16) >= 10 ? 'A' + ((*str % 16) - 10) : '0' + (*str % 16));
}
str++;
}
}
